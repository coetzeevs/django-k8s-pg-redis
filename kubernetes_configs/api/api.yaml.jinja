apiVersion: apps/v1
kind: Deployment
metadata:
  name: api
  labels:
    name: api
spec:
  replicas: 3
  template:
    metadata:
      labels:
        name: api
        app: api
    spec:
      containers:
      - name: api
        image: eu.gcr.io/{{ GOOGLE_CLOUD_PROJECT }}/api:{{- api_tag -}}
        {% if minikube %}
        imagePullPolicy: IfNotPresent
       {%- endif %}
        ports:
        - containerPort: 80
        volumeMounts:
        {% if has_db -%}
        - name: secrets
          mountPath: /etc/secrets
          readOnly: true
        {%- endif -%}
      {% if hot_reload %}
        - name: reload
          mountPath: /app
      {%- endif %}
      volumes:
      {%- if has_db %}
      - name: secrets
        secret:
          secretName: db-passwords
      {% endif %}
      {%-if hot_reload -%}
      - name: reload
        hostPath:
          path: {{ hotreload_directory }}
      {% endif %}
---

# The polls service provides a load-balancing proxy over the polls app
# pods. By specifying the type as a 'LoadBalancer', Container Engine will
# create an external HTTP load balancer.
# For more information about Services see:
#   https://cloud.google.com/container-engine/docs/services/
# For more information about external HTTP load balancing see:
#   https://cloud.google.com/container-engine/docs/load-balancer
apiVersion: v1
kind: Service
metadata:
  name: api
  labels:
    name: api
spec:
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 8080
  selector:
    name: api
